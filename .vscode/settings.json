{
  "git.autofetch": true,
  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": true,
  "eslint.options": {
    "configFile": ".eslintrc.js"
  },
  "eslint.validate": [
    "vue",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    /* Auto fix by ESLint */
    "source.fixAll.eslint": true
  }
}
